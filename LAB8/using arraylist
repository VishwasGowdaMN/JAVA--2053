package javalab6;

import java.util.*; // import must be outside the class

public class javalab6 {
    public static void main(String[] args) {
        ArrayList<String> students = new ArrayList<>();
        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("\n1. Add  2. Insert  3. Update  4. Remove  5. Display  0. Exit");
            System.out.print("Enter choice: ");
            int ch = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (ch) {
                case 1 -> {
                    System.out.print("Enter name: ");
                    students.add(sc.nextLine());
                }

                case 2 -> {
                    System.out.print("Enter index: ");
                    int index = sc.nextInt();
                    sc.nextLine(); // consume newline
                    if (index < 0 || index > students.size()) {
                        System.out.println("Invalid index!");
                        break;
                    }
                    System.out.print("Enter name: ");
                    students.add(index, sc.nextLine());
                }

                case 3 -> {
                    System.out.print("Enter index to update: ");
                    int index = sc.nextInt();
                    sc.nextLine();
                    if (index < 0 || index >= students.size()) {
                        System.out.println("Invalid index!");
                        break;
                    }
                    System.out.print("Enter new name: ");
                    students.set(index, sc.nextLine());
                }

                case 4 -> {
                    System.out.print("Remove by 1.Name or 2.Index: ");
                    int opt = sc.nextInt();
                    sc.nextLine();
                    if (opt == 1) {
                        System.out.print("Enter name: ");
                        String name = sc.nextLine();
                        if (students.remove(name))
                            System.out.println("Removed successfully.");
                        else
                            System.out.println("Name not found.");
                    } else if (opt == 2) {
                        System.out.print("Enter index: ");
                        int index = sc.nextInt();
                        if (index < 0 || index >= students.size()) {
                            System.out.println("Invalid index!");
                            break;
                        }
                        students.remove(index);
                        System.out.println("Removed successfully.");
                    } else {
                        System.out.println("Invalid option.");
                    }
                }

                case 5 -> {
                    if (students.isEmpty())
                        System.out.println("No students in the list.");
                    else
                        System.out.println("Students: " + students);
                }

                case 0 -> {
                    System.out.println("Bye!");
                    sc.close();
                    return;
                }

                default -> System.out.println("Invalid choice!");
            }
        }
    }
}
